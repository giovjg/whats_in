<div class="show-main-container">
  <div class="container">
    <div class="card-trip">

   
    <h1><%= @restaurant.name %></h1>

    <% if @restaurant.photo.attached? %>
      <%= cl_image_tag @restaurant.photo.key, height: 300, width: 400, crop: :fill %>
      <div class="card-trip-infos">
        <div>
            <p><%= @restaurant.category %></p>

           <p><%= restaurant.rating %></p>
            <p><%= @restaurant.price %> </p>

            <p><%= @restaurant.telephone %></p>
             <p><%= @restaurant.address %></p>
            <p><%= @restaurant.adaptability %></p>
            <p><%= @restaurant.wifi %></p>
            <p><%= @restaurant.start_time %></p> - <p><%= @restaurant.end_time%></p>
            <p><%= @restaurant.dishes.name %></p>
          </div>
       </div>
      <%else%>
        <h1>No picture</h1>
      <% end %>
     <!--  Here the code for dishes list for a given restaurant-->
    <% @dishes.each do |dish| %>
      <p><%= dish.name%></p>
      <% dish.ingredients.each do |ingredient| %>
          <%= ingredient.name  %>
      <% end %>
    <% end %>

    </div>
  </div>

</div>

